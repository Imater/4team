.wrapper
  width 100%
  height 100vh
  overflow auto
  -webkit-overflow-scrolling touch

.controls
  padding-top 5px
  padding-bottom 5px
  display flex
  align-items center

.home,
.url
  margin-right 5px

.url
  position relative
  width 100%

.iframe
  display block
  width 100%
  height 100%

.tooltip
  padding 10px 15px
  position absolute
  top 10px
  left 10px
  z-index 10
  border-radius 8px
  color white
  background-color rgba(5, 9, 20, 0.6)
  white-space nowrap
  pointer-events none
