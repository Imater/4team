.userPanel
  padding-top 20px
  padding-bottom 20px
  display flex
  flex-direction column
  align-items center
  justify-content space-between
  min-width 100px
  height 100vh
  background-color #eeeeee

.users
  padding-bottom 20px
  display flex
  flex-direction column
  align-items center
  width 75px
  height 80vh
  overflow auto

.user
  margin-bottom 15px
  width 70px

.link
  padding-top 3px
  display flex
  flex-direction column
  width 50px

  &_active,
  &_active:hover
    color black
    text-decoration none
    cursor default

.projects
  width 75px
